package java_basics;

public class VariablesContinued {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int var = 10000;
		long bigNumber = 1000000000000000L;
		// with Long data types, add an "L" at the end. but will require a lot of memory
		// bad practice to use "long" data type with smaller values 
		
		
		short smallNumber = 8474;
		// -32768 to 32767, is the maximum that a "short" data type can hold
		
		byte reallySmallNumber = 127;
		// -128 to 127 is the maximum number "byte" data type can hold. 
		// The byte data type is an 8-bit signed two's complement integer. 
		
		double decimalVariable = 394.003;
		// The double data type is a double-precision 64-bit IEEE 754 floating point. 
		
		boolean decision = true;
		// boolean can only store "true" or "false"
		
		char letter = '9';
		// stores a single character in quotes.
		
		System.out.printlin(var);
		
		
	}

}
